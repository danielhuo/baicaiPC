<script>
$(function(){
$('#back_time').datepicker({
			changeMonth : true,
			changeYear : true,
		});

});
	function save(){	
			var tl=$("#tl").val();
			var name=$("#name").val();
			var price=$("#price").val();
			var back_time=$("#back_time").val();	
			$.ajax({
				url: "__URL__/save",
				type:"POST",
				dataType: "json",
				data: {"telephone":tl,"name":name,"price":price,"back_time":back_time},
				success: function(d){
					if(d.status == 1){
						$.jBox.tip("请将内容填写完整");
					}
					else if(d.status==2){
						$.jBox.tip("号码输入格式错误");
					}
					else if(d.status==3){
					
						$.jBox.tip("信息提交成功,我们的客服会联系您");
					}
				}
			});	
	}

</script>
