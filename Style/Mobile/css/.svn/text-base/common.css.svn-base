@charset "utf-8";
body{height: 100%;background-color:#eee;}
header{
	width:100%; height:42px;line-height: 42px;
	position:fixed;top:0px;z-index:999;opacity:0.9;background-color:#FF6600;
	border-bottom:1px solid #FF6600;}
header .dropdown-menu{min-width:120px;}
header .fa{height: 42px;line-height: 42px;color:#FFF;font-size:20px;}
#title{
	position:fixed;top:0px;text-align:center;
	width:50%;height:42px;line-height:42px;color:#FFF;
	margin:0 25%;font-weight:600;z-index:1000;font-size:20px;text-shadow:2px 1px 2px rgba(0,0,0,.5);}


header a{color:#fff;} 
footer{
	font-size:12px;
	
	height:50px;
	background-color:#fff;
	box-shadow:0 1px 1px silver inset;
	position:fixed;
	bottom:0;width:100%;
	z-index:98;
}
footer a{width:100%;text-align:center;display:block;color:#666;}
footer .fa{
			font-size:26px;display:block;line-height:30px;
			height:30px;text-shadow:0px 1px 1px rgba(0,0,0,.5);
}
.fmenu{overflow: hidden;}
.fmenu>li{height:50px;width:25%;float: left;}

.fmenu>li>a{height:50px;text-align: center;}
.cul{	width:100%;position:absolute;bottom:48px;display:none;background-color:#fff;
	padding:10px 0;
	box-shadow:0px -2px 4px #f5d8ad;
}
.cul li{width:100%;height:30px;}
.cul a{line-height:30px;font-size:14px}

.money{color:#FF0000;}
/*遮罩*/
.cover{
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		display: none;
		z-index: 20000;
		background-color:#333;
		padding:20px 0;
}


.form-alert{height:50px;}
.form-alert h4{margin:0 auto;line-height: 50px;}
.input-group-addon{background-color: #fff;}
.money-show{border-top: 1px solid #fff;border-bottom: 1px solid #eee; padding:0 15px}