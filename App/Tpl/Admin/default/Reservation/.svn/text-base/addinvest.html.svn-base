<include file="Public:_header" />
 <title>发表配资-{$glo.index_title}</title>
 <script type="text/javascript" src="__ROOT__/Style/My97DatePicker/jquery.ui.datepicker.js" language="javascript"></script>
<link type="text/css"  rel="stylesheet" href="/Style/My97DatePicker/jquery.ui.datepicker.css"/>
<tagLib name="htmlA" />
<div class="so_main">
 
<style>
form{width:500px;margin:20px auto;min-height:400px;padding:20px 50px;box-shadow:1px 1px 1px 1px lightblue;}
form h1{text-align:center;color:#2AA198;letter-spacing:5px;text-shadow:1px 0px 1px gray;font-size:300%;}
form div{margin-top:30px;height:40px;padding:0 10px;}
form span{font-size:18px;font-weight:bold;line-height:40px;color:#2AA198}
form div input{height:30px;margin:0 20px 0 10px;
			   text-indent:10px;border:none;
			   border-bottom:1px solid gray;font-size:18px;
			   width:200px;background-color:inherit;}
form input[type=submit]{
		width:50%;
		display:block;
		margin:30px auto;
		height:40px;
		background-color:#2AA198;
		color:#fff;
		font-size:20px;
		box-shadow:2px 2px 0px 2px gray;
	}
form input[type=submit]:hover{
		box-shadow:none;
}
.error_box{
	margin-left:15px;
	font-size:14px;
	color:red;
	font-weight:normal;
	
}
</style>
<div class="main">
	<form method="post" action="__URL__/doaddinvest/"  onsubmit="return cksubmit();" id="Borrow" enctype="multipart/form-data">
		<h1>投资人手动录入</h1>
		<div>
			<span>百财帐号</span><input type="text" id ="name" name="name"/><span class="error_box"></span>
		</div>
		<div>
			<span>投资金额</span><input type="text" id ="money" name="money"/>元<span class="error_box"> </span>
		</div>
		<input type="hidden" id ="r_id" name="r_id" value="{$r_id}"/>
			<input type="submit" value="提 交"/>
		
	</form>
</div>
<script type="text/javascript">
	function setError(tip){
		$.jBox.tip(tip);
		return false;
	}
	function cksubmit(){
		var name = $('#name').val();
		var money = $('#money').val();
		if (money=="") {
			$('.error_box:eq(1)').html("募集金额不能为空！");
			return  false;
		} 
		if (money < 1) {
			$('.error_box:eq(1)').html("募集金额不能小于1元！");
			return false;
		}
		if (money%1!= 0) {
			$('.error_box:eq(1)').html("募集金额不能为小数！");
			return false;
		}
		if (name == "") {
			$('.error_box:eq(0)').html("百财帐号不能为空！");
			return false;
		}
		return true;
	}
</script>
</div>


<include file="Public:_footer" />