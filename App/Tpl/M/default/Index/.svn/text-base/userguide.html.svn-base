<!doctype html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>用户指南</title>
<meta content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0,user-scalable=no" name="viewport" id="viewport" />
<style type="text/css">
* { margin: 0; padding: 0; }
html, body { width: 100%; height: 100%; overflow: hidden;}
.container { width: 100%; height: 100%; position: absolute; left: 0; top:0; }
.container .page { height: 100%; position: relative; text-align:center;background-size:100% 100%;background-repeat:no-repeat;background-position:center center;}
.container .page0{background-image:url(/Style/Mobile/images/ug0.jpg);}
.container .page1{background-image:url(/Style/Mobile/images/ug1.jpg);}
.container ul{margin: 0px;padding: 8px 4px;list-style:none;
position: fixed;
height: auto;
right: 10px;
top: 50%;
z-index: 999;
margin-top:-70px;
width: 32px;}
.container ul li{
	width:20px;
	height:20px;
	border-radius:10px;
	background-color:#666;margin-top:10px;text-align:center;}
.u-arrow {
    position: fixed;
    bottom: 30px;
    left: 50%;
    z-index: 150;
    width: 50px;
    height: 28px;
    margin-left: -25px;
	background-position: 0px -82px;
	background-image: url(/Style/Mobile/images/css_sprite01.png) ;
    background-repeat: no-repeat ;
}

</style>
<script type="text/javascript" src="/Style/Mobile/jQuery.js"></script>
<script type="text/javascript" src="/Style/Mobile/js/jquery.touchSwipe.min.js"></script>
<script type="text/javascript">
    $(document).ready(
        function() {
            var nowpage = 0;
            $(".container").swipe(
                {
                    swipe:function(event, direction, distance, duration, fingerCount) {
                         if(direction == "up")
						 {
                            nowpage = nowpage + 1;
                         }
						 else if(direction == "down")
						 {
                            nowpage = nowpage - 1;
                         }

                         if(nowpage >=1)
						 {
                            nowpage = 1;
							$(".container .u-arrow").hide();
                         }else{
							$(".container .u-arrow").show();
						 }

                         if(nowpage <=0)
						 {
                            nowpage = 0;
                         }
                        $(".container").animate({"top":nowpage * -100 + "%"},0);
						$(".container ul li").css("background-color","#666");;
						$(".container ul li:eq("+nowpage+")").css("background-color","red");
                    }
                }
            );
        }
    );
</script>
</head>
<body>
<div class="container">
  <div class="page page0"></div>
  <div class="page page1"></div>
  
  <ul><li style="background-color:red"></li><li></li></ul>
  <div class="u-arrow">
    <p class="css_sprite01"></p>
  </div>
</div>

</body>
</html>