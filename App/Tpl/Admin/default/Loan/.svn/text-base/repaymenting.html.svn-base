<include file="Public:_header" />
<tagLib name="htmlA" />
<script type="text/javascript">
	var delUrl = '__URL__/doDel';
	var addUrl = '__URL__/add';
	var isSearchHidden = 1;
	$(function(){
	  alert(size({vo}));
	})
</script>
<div class="so_main">
  <div class="page_tit">还款中的票据</div>
<!--搜索/筛选会员-->
  <include file="search" />
<!--搜索/筛选会员-->

  
  <div class="list">
  
  <table id="area_list" width="100%" border="0" cellspacing="0" cellpadding="0">
  <tr>
    <th style="width:30px;">
        <input type="checkbox" id="checkbox_handle" onclick="checkAll(this)" value="0">
        <label for="checkbox"></label>
    </th>
	<th class="line_l">借款项目</th>
    <th class="line_l">用户名</th>
    <th class="line_l">发标额</th>
	<th class="line_l">实募额</th>
    <th class="line_l">借款期限</th>
    <th class="line_l">还款截止</th>
	<th class="line_l">已还金额</th>
    <th class="line_l">操作</th>
  </tr>
  <volist id="vo" name="list">
      <tr overstyle='on' id="list_{$vo.id}">
        <td><input type="checkbox" name="checkbox" id="checkbox2" onclick="checkon(this)" value="{$vo.id}"></td>
		
        <td>
		<a href="__APP__/Loaninvest/detail?id={$vo.id}" title="{$vo.name}" target="_blank">JK{$vo.id}&nbsp;{$vo.loan_name|cnsubstr=###,12}</a>
		</td>
		<td><htmlA:user id="vo.mid" uname="vo.user_name" /></td>
        <td>{$vo.loan_amount|num_format=###}</td>
		<td>{$vo.has_collect|num_format=###}</td>
        <td>{$vo.loan_duration}{$vo.duration_type|duration_format=###}</td>
        
		<td>{$vo.deadline|date="Y-m-d H:i",###}</td>
		<td>{$vo.has_repay|num_format=###}</td>
        <td>       
		    <a href="/admin/loan/doinvest?id={$vo.id}">投资人记录</a>&nbsp;
			<a href="/admin/loan/schedule?id={$vo.id}">进度跟踪</a>
        </td>
      </tr>
  </volist>
  </table>

  </div>
  
  <div class="Toolbar_inbox">
  	<div class="page right">{$pagebar}</div>
	<htmlA:commonBtn type="href" action="__URL__/doweek?isShow=1" value="一周内到期标"/>
	<!--<htmlA:commonBtn type="href" action="__URL__/doWeek_1?time=' '" value="一周内到期标"/>-->
    <htmlA:commonBtn type="jsfun" action="dosearch();" value="搜索/筛选借款" style="search_action" />
  </div>
</div>
<script type="text/javascript">
	function SendTip(id) {
        id = id.toString();
        if(id == '') return false;

		//提交修改
		var datas = {'id':id};
		$.post('__URL__/tip', datas,ResponseF,'json');
    }
	
	function ResponseF(res){
				if(res.success == '0') {
					ui.error('邮件提醒发送失败！');
				}else {
					ui.success('邮件提醒发送成功！');
				}
	}	
	</script>
<include file="Public:_footer" />